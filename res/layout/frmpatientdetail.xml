                        android:maxLength="2" >
                    </EditText>

                    <TextView
                        android:id="@+id/lbl11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Month part of age"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtAgeMo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="2" >
                    </EditText>

                    <TextView
                        android:id="@+id/lbl12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day part of age"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txtAgeDa"
                        android:layout_width="fill_parent"
