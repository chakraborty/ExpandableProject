<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/qqq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:gravity="center"
                android:text="akdals"
                android:textAppearance="?android:attr/textAppearanceLarge" >
            </TextView>

            <LinearLayout
                android:id="@+id/checkBoxHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblcol1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product type"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <Spinner
                    android:id="@+id/spcol1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </Spinner>

                <EditText
                    android:id="@+id/txtcol1other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10" android:textAppearance="?android:attr/textAppearanceMedium" >
                </EditText>

                <TextView
                    android:id="@+id/lblcol2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unit Code"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <Spinner
                    android:id="@+id/spcol2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </Spinner>

                <TextView
                    android:id="@+id/lblcol3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How much did you produce in the last  month?"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <EditText
                    android:id="@+id/txtcol3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:maxLength="5" >
                </EditText>

                <TextView
                    android:id="@+id/lblcol4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How much did you consume in last month?"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                

                <EditText
                    android:id="@+id/txtcol4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:maxLength="5" >
                </EditText>

                <TextView
                    android:id="@+id/lblcol5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How much did you give away in last month?"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <EditText
                    android:id="@+id/txtcol5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:maxLength="5" >
                </EditText>

                <TextView
                    android:id="@+id/lblcol6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How much did you sell in last  month?"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium">
                </TextView>

                
                <EditText
                    android:id="@+id/txtcol6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:maxLength="5" >
                </EditText>

                <TextView
                    android:id="@+id/lblcol7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="If sold, where"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

               <Spinner
                    android:id="@+id/spcol7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </Spinner>

                <EditText
                    android:id="@+id/txtcol7other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:maxLength="100" >
                </EditText>
                <TextView
                    android:id="@+id/lblcol8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total value of sales in last months"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                  <EditText
                    android:id="@+id/txtcol8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    >
                </EditText>

                
                
                <TextView
                    android:id="@+id/lblcol9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who decides to sell?"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <Spinner
                    android:id="@+id/spcol9"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </Spinner>

                <TextView
                    android:id="@+id/lblcol10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who controls the money from the sale ?"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <Spinner
                    android:id="@+id/spcol10"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </Spinner>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dip"
        android:layout_weight="0.03"
        android:orientation="horizontal"
        android:weightSum="1" >

        <Button
            android:id="@+id/btnNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.96"
            android:text="Add Note" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="6" >

        <Button
            android:id="@+id/prevButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_weight="2"
            android:text="Previous" >
        </Button>

        <Button
            android:id="@+id/clButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Clear" >
        </Button>

        <Button
            android:id="@+id/saveNxtButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="2"
            android:text="Save &amp; Next" >
        </Button>
    </LinearLayout>

</LinearLayout>