<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/qqq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:gravity="center"
                android:text="akdals"
                android:textAppearance="?android:attr/textAppearanceLarge" >
            </TextView>

            <LinearLayout
                android:id="@+id/checkBoxHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblcol1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <Spinner
                    android:id="@+id/spcol1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </Spinner>

                <EditText
                    android:id="@+id/txtcol1other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10" android:textAppearance="?android:attr/textAppearanceMedium" >
                </EditText>

                <TextView
                    android:id="@+id/lblcol2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How many are present at your home / farm?"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <EditText
                    android:id="@+id/txtcol2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="2" >
                </EditText>

                <TextView
                    android:id="@+id/lblcol3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ownership"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <Spinner
                    android:id="@+id/spcol3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:focusable="true">
                </Spinner>

                <TextView
                    android:id="@+id/lblcol4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Did you buy any […] during the last 12 months?"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <TextView
                    android:id="@+id/lblcol4_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number bought"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <EditText
                    android:id="@+id/txtcol4_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="2" >
                </EditText>

                <TextView
                    android:id="@+id/lblcol4_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total purchase value BTks"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <EditText
                    android:id="@+id/txtcol4_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="10" >
                </EditText>

                <TextView
                    android:id="@+id/lblcol5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How many […] were sold during the past 12 months ?"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium">
                </TextView>

                <TextView
                    android:id="@+id/lblcol5_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number bought"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <EditText
                    android:id="@+id/txtcol5_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="2" >
                </EditText>

                <TextView
                    android:id="@+id/lblcol5_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total purchase value BTks"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <EditText
                    android:id="@+id/txtcol5_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="10" >
                </EditText>

                <TextView
                    android:id="@+id/lblcol6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Where did you sell […]?"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <Spinner
                    android:id="@+id/spcol6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:focusable="true">
                </Spinner>

                
                
                <EditText
                    android:id="@+id/txtcol6other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    >
                </EditText>
                
                
                
                <TextView
                    android:id="@+id/lblcol7_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who decided to sell?"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <Spinner
                    android:id="@+id/spcol7_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:focusable="true">
                </Spinner>

                <TextView
                    android:id="@+id/lblcol7_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who controls the money from the sale?"
                    android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium" >
                </TextView>

                <Spinner
                    android:id="@+id/spcol7_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:focusable="true">
                </Spinner>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dip"
        android:layout_weight="0.03"
        android:orientation="horizontal"
        android:weightSum="1" >

        <Button
            android:id="@+id/btnNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.96"
            android:text="Add Note" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="6" >

        <Button
            android:id="@+id/prevButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_weight="2"
            android:text="Previous" >
        </Button>

        <Button
            android:id="@+id/clButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Clear" >
        </Button>

        <Button
            android:id="@+id/saveNxtButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="2"
            android:text="Save &amp; Next" >
        </Button>
    </LinearLayout>

</LinearLayout>